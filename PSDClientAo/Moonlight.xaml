<UserControl x:Class="PSD.ClientAo.Moonlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Gray" Height="20" Width="200">
            <StackPanel x:Name="stackPanel" Orientation="Horizontal">
                <Rectangle x:Name="goldenRec" Width="180">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Color="LightGoldenrodYellow"  Offset="0.0" />
                                <GradientStop Color="Gold" Offset="1.0" />
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="whiteRec" Width="20" Fill="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
