<UserControl x:Class="PSD.ClientAo.Orchis40"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="1024" Height="640"><!-- W750, H400, L130, T118 -->
    <UserControl.Resources>
        <ResourceDictionary>            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PSDRisoLib;component/Resources/ImgRes.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <RadialGradientBrush x:Key="lineStroke">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="Yellow" Offset="1" />
                    <GradientStop Color="Gold" Offset="0" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Canvas>
            <Canvas x:Name="centreCanvas" Width="450" Height="125" Canvas.Left="275" Canvas.Top="230"/>
            <Canvas x:Name="aniCanvas" Width="750" Height="400" Canvas.Left="130" Canvas.Top="118"
                    IsHitTestVisible="False"/>
        </Canvas>
    </Grid>
</UserControl>
